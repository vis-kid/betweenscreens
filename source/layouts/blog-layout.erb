<% wrap_layout :layout do %>

  <article class='article-detail'>

  <h4 class='detail-post-date'><%= date %></h3>
    <h2 class='detail-post-title'><%= title %></h2>
    <h3 class='detail-post-topic-list'><%= topic_list %></h3>
  
    <% if soundcloud_id %>
      <section class='soundcloud-player-big'>
        <iframe 
          width="100%" 
          height="450" 
          scrolling="no" 
          frameborder="no" 
          src=<%= big_soundcloud_player %>>
        </iframe>
      </section>
    <% end %>

    <% if interviewee %>
      <h3 id='other-episodes'>Other Episodes</h1>
      <a class='other-episodes' href="/tags/<%= dasherize(interviewee) %>.html"><%= interviewee %></a>
    <% end %>
  
    <%= current_article.body %>
  
  </article>

<% end %>
